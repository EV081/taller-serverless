{
    "info": {
        "_postman_id": "burger-cloud-taller-v2",
        "name": "Burger Cloud - Taller Serverless (v2 - Updated)",
        "description": "Colección actualizada con nuevos endpoints de Pedidos y Productos.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Autenticación",
            "item": [
                {
                    "name": "Registrar Usuario (Cliente)",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"cliente@test.com\",\n    \"password\": \"123456\",\n    \"role\": \"cliente\",\n    \"nombre\": \"Cliente Test\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{api_url}}/register",
                            "host": [
                                "{{api_url}}"
                            ],
                            "path": [
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Login (Cliente)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set(\"token_cliente\", jsonData.token);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"correo\": \"cliente@test.com\",\n    \"contrasena\": \"123456\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{api_url}}/login",
                            "host": [
                                "{{api_url}}"
                            ],
                            "path": [
                                "login"
                            ]
                        }
                    }
                },
                {
                    "name": "Login (Empleado)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set(\"token_cocina\", jsonData.token);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"correo\": \"cocina@burger.com\",\n    \"contrasena\": \"123456\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{api_url}}/login/empleado",
                            "host": [
                                "{{api_url}}"
                            ],
                            "path": [
                                "login",
                                "empleado"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "2. Productos",
            "item": [
                {
                    "name": "Listar Productos",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{api_url}}/productos?limit=10",
                            "host": [
                                "{{api_url}}"
                            ],
                            "path": [
                                "productos"
                            ],
                            "query": [
                                {
                                    "key": "limit",
                                    "value": "10"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Obtener Producto (Body)",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"local_id\": \"BURGER-LOCAL-001\",\n  \"producto_id\": \"PRODUCT_UUID_HERE\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{api_url}}/productos/detalle",
                            "host": [
                                "{{api_url}}"
                            ],
                            "path": [
                                "productos",
                                "detalle"
                            ]
                        }
                    }
                },
                {
                    "name": "Eliminar Producto (Body)",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"local_id\": \"BURGER-LOCAL-001\",\n  \"producto_id\": \"PRODUCT_UUID_HERE\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{api_url}}/productos",
                            "host": [
                                "{{api_url}}"
                            ],
                            "path": [
                                "productos"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "3. Pedidos",
            "item": [
                {
                    "name": "Crear Pedido",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token_cliente}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"local_id\": \"BURGER-LOCAL-001\",\n  \"productos\": [\n    {\n      \"producto_id\": \"PRODUCT_UUID_HERE\",\n      \"cantidad\": 2\n    }\n  ],\n  \"costo\": 125.50,\n  \"direccion\": \"Av. Principal 123, Lima\",\n  \"estado\": \"procesando\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{api_url}}/pedido",
                            "host": [
                                "{{api_url}}"
                            ],
                            "path": [
                                "pedido"
                            ]
                        }
                    }
                },
                {
                    "name": "Estado Pedido",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{api_url}}/pedido/status?local_id=BURGER-LOCAL-001&pedido_id=PEDIDO_UUID_HERE",
                            "host": [
                                "{{api_url}}"
                            ],
                            "path": [
                                "pedido",
                                "status"
                            ],
                            "query": [
                                {
                                    "key": "local_id",
                                    "value": "BURGER-LOCAL-001"
                                },
                                {
                                    "key": "pedido_id",
                                    "value": "PEDIDO_UUID_HERE"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Historial Pedidos (Cliente)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token_cliente}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{api_url}}/pedido/historial",
                            "host": [
                                "{{api_url}}"
                            ],
                            "path": [
                                "pedido",
                                "historial"
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "api_url",
            "value": "https://REEMPLAZAR_CON_TU_API_URL.execute-api.us-east-1.amazonaws.com",
            "type": "string"
        }
    ]
}