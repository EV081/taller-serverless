                    }
                },
                {
                    "name": "Get Order Status (ANY AUTH)",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{token_usuario}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/pedido/status?local_id=BURGER-LOCAL-001&pedido_id=abc-123-456",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "pedido",
                                "status"
                            ],
                            "query": [
                                {
                                    "key": "local_id",
                                    "value": "BURGER-LOCAL-001"
                                },
                                {
                                    "key": "pedido_id",
                                    "value": "abc-123-456"
                                }
                            ]
                        },
                        "description": "Requiere autenticación (cualquier rol)"
                    }
                },
                {
                    "name": "List My Orders (USUARIO)",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{token_usuario}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/pedidos/mis-pedidos?limit=10",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "pedidos",
                                "mis-pedidos"
                            ],
                            "query": [
                                {
                                    "key": "limit",
                                    "value": "10"
                                }
                            ]
                        },
                        "description": "Usuario ve solo sus propios pedidos"
                    }
                },
                {
                    "name": "List All Orders (COCINERO/REPARTIDOR)",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{token_cocinero}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/pedidos/todos?limit=20",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "pedidos",
                                "todos"
                            ],
                            "query": [
                                {
                                    "key": "limit",
                                    "value": "20"
                                }
                            ]
                        },
                        "description": "Requiere rol: Cocinero o Repartidor"
                    }
                }
            ]
        },
