                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"correo\": \"repartidor@burger.com\",\n  \"password\": \"repartidor123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login-empleado",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login-empleado"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "2. Products (Productos)",
            "item": [
                {
                    "name": "List Products (PUBLIC)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"limit\": 20\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/productos/list",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "productos",
                                "list"
                            ]
                        },
                        "description": "Endpoint público - No requiere autenticación"
                    }
                },
                {
                    "name": "Get Product by ID (PUBLIC)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"producto_id\": \"prod-12345678\",\n  \"local_id\": \"BURGER-LOCAL-001\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/productos/id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "productos",
                                "id"
                            ]
                        },
                        "description": "Endpoint público - No requiere autenticación"
                    }
                },
                {
                    "name": "Create Product (GERENTE)",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{token_gerente}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"nombre\": \"Hamburguesa Clásica\",\n  \"descripcion\": \"Carne, lechuga, tomate, queso\",\n  \"categoria\": \"Hamburguesas\",\n  \"precio\": 15.50,\n  \"stock\": 100,\n  \"local_id\": \"BURGER-LOCAL-001\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/productos/create",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "productos",
                                "create"
                            ]
                        },
                        "description": "Requiere rol: Gerente o Admin"
                    }
                },
                {
                    "name": "Update Product (GERENTE)",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{token_gerente}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"producto_id\": \"prod-12345678\",\n  \"local_id\": \"BURGER-LOCAL-001\",\n  \"precio\": 16.50,\n  \"stock\": 80\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/productos/update",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "productos",
                                "update"
                            ]
                        },
                        "description": "Requiere rol: Gerente o Admin"
                    }
                },
                {
                    "name": "Delete Product (GERENTE)",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{token_gerente}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"producto_id\": \"prod-12345678\",\n  \"local_id\": \"BURGER-LOCAL-001\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/productos/delete",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "productos",
                                "delete"
                            ]
                        },
                        "description": "Requiere rol: Gerente o Admin"
                    }
                }
            ]
        },
        {
            "name": "3. Orders (Pedidos)",
            "item": [
                {
                    "name": "Create Order (USUARIO)",
                    "request": {
                        "auth": {
                            "type": "bearer",
