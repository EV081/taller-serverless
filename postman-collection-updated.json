                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"local_id\": \"BURGER-LOCAL-001\",\n  \"productos\": [\n    {\n      \"producto_id\": \"prod-12345678\",\n      \"cantidad\": 2\n    },\n    {\n      \"producto_id\": \"prod-87654321\",\n      \"cantidad\": 1\n    }\n  ],\n  \"direccion\": \"Av. Principal 123, Lima\",\n  \"costo\": 47.50\n}"
