    "item": [
        {
            "name": "1. Authentication",
            "item": [
                {
                    "name": "Login Usuario",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('token_usuario', response.token);",
                                    "    console.log('Token Usuario guardado:', response.token);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"correo\": \"usuario@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    }
                },
                {
                    "name": "Login Empleado (Gerente)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('token_gerente', response.token);",
                                    "    console.log('Token Gerente guardado:', response.token);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"correo\": \"gerente@burger.com\",\n  \"password\": \"gerente123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login-empleado",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login-empleado"
                            ]
                        }
                    }
                },
                {
                    "name": "Login Empleado (Cocinero)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('token_cocinero', response.token);",
                                    "    console.log('Token Cocinero guardado:', response.token);",
                                    "}"
                                ]
                            }
