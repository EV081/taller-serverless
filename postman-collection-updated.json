{
    "info": {
        "name": "Burger Delivery API - With Security",
        "description": "Colección actualizada con seguridad basada en roles",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "https://your-api-gateway-url.execute-api.us-east-1.amazonaws.com/dev",
            "type": "string"
        },
        {
            "key": "token_usuario",
            "value": "",
            "type": "string"
        },
        {
            "key": "token_gerente",
            "value": "",
            "type": "string"
        },
        {
            "key": "token_cocinero",
            "value": "",
            "type": "string"
        },
        {
            "key": "token_repartidor",
            "value": "",
            "type": "string"
        }
