                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"correo\": \"cocinero@burger.com\",\n  \"password\": \"cocinero123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login-empleado",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login-empleado"
                            ]
                        }
                    }
                },
                {
                    "name": "Login Empleado (Repartidor)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('token_repartidor', response.token);",
                                    "    console.log('Token Repartidor guardado:', response.token);",
                                    "}"
