{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Empleados",
  "type": "object",
  "x-dynamodb": {
    "partition_key": "local_id",
    "sort_key": "correo"
  },
  "properties": {
    "local_id": {
      "type": "string"
    },
    "correo": {
      "type": "string",
      "format": "email"
    },
    "contrasena": {
      "type": "string",
      "minLength": 6
    },
    "nombre": {
      "type": "string"
    },
    "apellido": {
      "type": "string"
    },
    "role": {
      "type": "string",
      "enum": [
        "Repartidor",
        "Cocinero"
      ]
    }
  },
  "required": [
    "local_id",
    "correo",
    "contrasena",
    "nombre",
    "apellido",
    "role"
  ],
  "additionalProperties": false
}